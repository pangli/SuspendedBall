<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <Button
        android:id="@+id/btn_create_show_float"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="创建并显示FloatView" />

    <Button
        android:id="@+id/btn_show_float"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示FloatView" />

    <Button
        android:id="@+id/btn_hide_float"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="隐藏FloatView" />

    <Button
        android:id="@+id/btn_close_float"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="关闭FloatView" />

    <Button
        android:id="@+id/btn_next_activity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启动下个Activity" />
</LinearLayout>
